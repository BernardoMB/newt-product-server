{
  "name": "newt-mx-rest-api",
  "version": "1.1.0",
  "description": "The Newt API to connect with third party product providers",
  "main": "server.ts",
  "scripts": {
    "start": "ts-node ./server.ts",
    "prestart": "npm run generate-full-documentation",
    "test": "cross-env NODE_ENV=test mocha -r ts-node/register src/test/**/*.ts",
    "generate-documentation": "apidoc -i src/ -o documentation/",
    "generate-full-documentation": "apidoc -i src/ -o documentation/ --private true",
    "serve-documentation": "lite-server --baseDir=\"documentation\""
  },
  "author": "Newt Mexico",
  "license": "ISC",
  "apidoc": {
    "title": "NewtMX API Spec",
    "url": "https://newt-mx-rest-api.azurewebsites.net",
    "sampleUrl": "https://newt-mx-rest-api.azurewebsites.net"
  },
  "dependencies": {
    "@types/applicationinsights": "^0.20.0",
    "applicationinsights": "^1.0.8",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "easy-soap-request": "^2.3.5",
    "express": "^4.16.4",
    "express-validator": "^5.3.0",
    "helmet": "^3.15.0",
    "jsonwebtoken": "^8.4.0",
    "mongo-sanitize": "^1.0.0",
    "mongodb": "^3.1.8",
    "mongoose": "^5.3.8",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.7",
    "@types/express-validator": "^3.0.0",
    "@types/helmet": "0.0.42",
    "@types/mocha": "^5.2.5",
    "@types/mongodb": "^3.1.14",
    "@types/mongoose": "^5.2.22",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.12.1",
    "@types/supertest": "^2.0.7",
    "@types/xml2js": "^0.4.3",
    "apidoc": "^0.17.7",
    "chai": "^4.2.0",
    "cross-env": "^5.2.0",
    "lite-server": "^2.4.0",
    "mocha": "^5.2.0",
    "morgan": "^1.9.1",
    "nodemon": "^1.18.5",
    "supertest": "^3.3.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.5"
  }
}
